<Window x:Class="RedundantFileRemover.ErrorViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ErrorViewer" Height="450" Width="800" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="errorLogs" x:FieldModifier="public" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Height="343" TextChanged="ErrorLogs_TextChanged"/>
        <Button x:Name="clearErrorLog" Content="Clear" HorizontalAlignment="Left" Margin="10,358,0,0" VerticalAlignment="Top" Width="60" ToolTip="Clear error logs" Click="ClearErrorLog_Click"/>

    </Grid>
</Window>
